<%- include('adminLogin') %>

<div class="container-fluid bg-light">
  <h1>Registration Data</h1>

  <% if (data && data.length > 0) { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(registration) { %>
          <tr>
            <td><%= registration.firstName %></td>
            <td><%= registration.email %></td>
            <td>
              <!-- You can add edit or delete actions here if necessary -->
              <a href="/admin/edit/<%= registration._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/admin/delete/<%= registration._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No registrations available.</p>
  <% } %>

</div>